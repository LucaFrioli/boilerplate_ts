{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "import",
    "node",
    "promise",
    "prettier"
  ],
  "rules": {
    // Regras gerais para todos os arquivos
  },
  "files": [
    "src/frontend/**/*.{jsx,tsx}",
    "src/backend/**/*.{ts,js}"
  ]
}
